@model List<Category>

<h2>Kategoriler</h2>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var category in Model)
        {
            <li>
                <strong>@category.Name</strong> -
                <a href="@category.Url">Detaylar</a>
            </li>
        }
    </ul>
}
else
{
    <p>Kategori bulunamadı.</p>
}
