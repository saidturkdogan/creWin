@model List<Category>

<h2>Kategoriler</h2>

@if (Model == null || !Model.Any())
{
    <p>Kategoriler yüklenemedi.</p>
}
else
{
    <ul>
        @foreach (var category in Model)
        {
            <li>
                <strong>@category.Name</strong><br />
                URL: <a href="@category.Url">@category.Url</a><br />
                Slug: @category.Slug
            </li>
        }
    </ul>
}
